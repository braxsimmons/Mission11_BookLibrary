@{
    ViewData["Title"] = "Home Page";
}

@model BooksListViewModel

<h1>Book Library</h1>

<table class="table table-bordered table-striped">
    <thead class="fw-bold">
        <tr>
            <th>BookId</th>
            <th>Title</th>
            <th>Author</th>
            <th>Publisher</th>
            <th>ISBN</th>
            <th>Classification</th>
            <th>Category</th>
            <th>PageCount</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Book x in Model.Books)
        {
            <tr>
                <td>@x.BookId</td>
                <td>@x.Title</td>
                <td>@x.Author</td>
                <td>@x.Publisher</td>
                <td>@x.Isbn</td>
                <td>@x.Classification</td>
                <td>@x.Category</td>
                <td>@x.PageCount</td>
                <td>$@x.Price</td>
            </tr>
        }
    </tbody>
</table>

<div page-model="@Model.PaginationInfo" page-action="Index"></div>
